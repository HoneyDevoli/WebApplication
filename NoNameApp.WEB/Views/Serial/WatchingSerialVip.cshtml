@{
    @model NoNameApp.Entities.Episode
    ViewBag.Title = "Смотреть сериал";
    Layout = "~/Views/Shared/_LayoutWithMenu.cshtml";
}

<div class="serial">
   
        <h3>Серия @ViewBag.Episode.NumberOfEpisode @ViewBag.Episode.Name</h3>
        @if (Model.Video.IsEmpty())
        {
            <h4 style="color:palevioletred">Серия появится в скором времени</h4>
        }
        <iframe src="@ViewBag.Episode.Video" width="853" height="480" frameborder="0" allowfullscreen></iframe>
    
   
</div>

@section scripts
{
    <script type="text/javascript">


           $(function () {
               $.ajaxSetup({ cache: false });
               $(".confirmModal").click(function (e) {

                   e.preventDefault();
                   $.get(this.href, function (data) {
                       $('#dialogContent').html(data);
                       $('#modDialog').modal('show');
                   });
               });
           })
    </script>
}
